<div class="row">
	<div class="col-lg-9">
		<div class="panel panel-default">
			<div class="panel-heading">XKCD Embed Settings</div>
			<div class="panel-body">
				<form role="form" class="xkcd-embed-settings">
					<div class="form-group">
						<label for="display">Embed Style</label>
						<select id="display" name="display" title="Embed Style" class="form-control">
							<option value="replace">Insert comics directly into the post, where indicated</option>
							<option value="append" selected>Collate all references and show them at the bottom of the post</option>
						</select>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-lg-3">
		<div class="panel panel-default">
			<div class="panel-heading">Control Panel</div>
			<div class="panel-body">
				<button class="btn btn-primary" id="save">Save Settings</button>
			</div>
		</div>
	</div>
</div>
